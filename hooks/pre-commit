#!/bin/sh

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}[Hook] Checking clang-format...${NC}"

if ! command -v clang-format >/dev/null 2>&1; then
    echo -e "${RED}[Error] clang-format not found in PATH.${NC}"
    
    if [ "$(uname)" = "Darwin" ]; then
        echo "Please install it: brew install clang-format"
    elif [ "$(expr substr $(uname -s) 1 5)" = "Linux" ]; then
        echo "Please install it: sudo apt-get install clang-format"
    else
        echo "Please install clang-format manually and add it to your PATH."
    fi
    exit 1
fi

FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(cpp|hpp|c|h|cc)$')

if [ -z "$FILES" ]; then
    echo -e "${GREEN}[Hook] No C++ files to format.${NC}"
    exit 0
fi

echo -e "${YELLOW}[Hook] Formatting staged files...${NC}"
for FILE in $FILES; do
    if [ -f "$FILE" ]; then
        clang-format -i -style=file "$FILE"
        git add "$FILE"
        echo "Formatted: $FILE"
    fi
done

echo -e "${GREEN}[Hook] Done.${NC}"
exit 0